<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pgw="http://schemas.android.com/apk/res/com.pgw.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="55dip"
        android:background="#8866ff00"
        android:gravity="center"
        android:text="设置中心"
        android:textColor="#000000"
        android:textSize="22sp" />

    <com.pgw.mobilesafe.ui.SetingItemView
        android:id="@+id/si_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        pgw:desc_off="自动更新已关闭"
        pgw:desc_on="自动更新已开启"
        pgw:title="设置自动更新" />

    <com.pgw.mobilesafe.ui.SetingItemView
        android:id="@+id/siv_address_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        pgw:desc_off="来电归属地显示已关闭"
        pgw:desc_on="来电归属地显示已开启"
        pgw:title="设置来电归属地显示" />

    <com.pgw.mobilesafe.ui.SetingClickView
        android:id="@+id/scv_select_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        pgw:title="归属地提示框风格" >
    </com.pgw.mobilesafe.ui.SetingClickView>

    <com.pgw.mobilesafe.ui.SetingItemView
        android:id="@+id/siv_black_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        pgw:desc_off="黑名单已关闭"
        pgw:desc_on="黑名单已开启"
        pgw:title="设置黑名单" />

</LinearLayout>